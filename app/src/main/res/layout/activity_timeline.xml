<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_location_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_ellipse"
            android:text="무슨시" />

        <Button
            android:id="@+id/btn_location_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_ellipse"
            android:text="무슨구" />

        <Button
            android:id="@+id/btn_location_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_ellipse"
            android:text="무슨동" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#7E0C0C0C" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/outside_border"
                android:gravity="center"
                android:text="Timeline" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/outside_border"
                android:gravity="center"
                android:text="Timeline2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/outside_border"
                android:gravity="center"
                android:text="Timeline3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/outside_border"
                android:gravity="center"
                android:text="Timeline4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/outside_border"
                android:gravity="center"
                android:text="Timeline5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/outside_border"
                android:gravity="center"
                android:text="Timeline6" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/outside_border"
                android:gravity="center"
                android:text="Timeline7" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/outside_border"
                android:gravity="center"
                android:text="Timeline8" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>